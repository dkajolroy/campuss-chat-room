{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  // "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "discus",
  ]
}
